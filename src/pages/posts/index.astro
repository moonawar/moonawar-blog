---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Container from "../../components/Container.astro";
import { getCollection } from "astro:content";
import BlogPost from "../../components/BlogPost.astro";

const posts = await getCollection("posts");
console.log(posts)
const postTest = posts[0];
console.log(typeof(postTest))
---

<BaseLayout title="Addin Munawwar's Space">
	<main class="flex justify-center grow">
		<Container>		
			<div class="relative">
				<h1 class="text-3xl font-bold text-center">The blog</h1>
				<!-- search icon -->
			</div>
			<!-- filter options -->
			<h2 class="text-2xl font-bold">Featured</h2>
			<div class="flex flex-col">
				<BlogPost
					title={postTest.data.title}
					targetUrl={`/posts/${postTest.slug}`}
					imgPath="/src/assets/addin.png"
					pubDate={postTest.data.pubDate}
					tags={postTest.data.tags}
				/>
			</div>
		</Container>
	</main>
</BaseLayout>