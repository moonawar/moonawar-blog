---
import BlogImage from './BlogImage.astro';
interface Props {
    title: string;
    targetUrl: string;
    imgPath: string;
    pubDate: Date;
    tags: Array<string>;
}

const { title, targetUrl, imgPath, pubDate, tags } = Astro.props;
---

<div class="relative">
    <div class="absolute w-full h-full bg-black opacity-75"></div>
    <BlogImage imgPath={imgPath} alt={title}/> 
    <div class="absolute bottom-0 p-6 z-50">
        <h3 class="font-bold">
            <a href={targetUrl} class="text-white no-underline">
                {title}
            </a>
        </h3>
        <time class="text-xs">{pubDate}</time>
        {
            tags.map((tag, idx) => (
                <span class="text-xs"> {tag}{idx != (tags.length - 1) ? ', ' : ''}</span>
            ))
        }
    </div>

</div>