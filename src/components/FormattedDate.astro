---
interface Props {
    date: Date
    className?: string
}

const { date, className } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', {
    weekday: 'long',
    year: 'numeric',
    month: 'short',
    day: 'numeric'
});
---

<time class={className ? className : "text-xs"}>{ formattedDate }</time>